<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top">

    <TextView
        android:id="@+id/textMyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="My Profile"
        android:textColor="#332D2D"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/roboto_bold"
            android:text="First Name:"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textShowFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#332D2D"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textFirstName" />

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Last Name:"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textShowFirstName" />


        <TextView
            android:id="@+id/textShowLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#332D2D"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textLastName" />

        <TextView
            android:id="@+id/textStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Store Name:"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textShowLastName" />


        <TextView
            android:id="@+id/textShowStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#332D2D"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textStoreName" />


    </LinearLayout>

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="59dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="@font/roboto_bold"
        android:onClick="signOut"
        android:text="Sign Out"
        android:textSize="20dp" />

</RelativeLayout>